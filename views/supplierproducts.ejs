<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Lumen ElekNet - Settings (Options) Page</title>
<link href="css/bootstrap.css" rel="stylesheet">
<link href="css/style.10.css" rel="stylesheet">
<link href="css/font-awesome.css" rel="stylesheet">
<script src="js/jquery-1.11.3.min.js"></script>
<script src="js/bootstrap.js"></script>
<script src="js/custom.js"></script>
<script src="js/ToggleNewPersonalCode.js"></script>
<script src="js/bootstrap-tabcollapse.js"></script>
<style>

@media	only screen and (max-width:768px){
table, thead, tbody, th, td{display:block;}
table.ui-datepicker-calendar tr,table.ui-datepicker td{display:block;}

.pageContent .responTable table thead tr,#tableScroll table thead tr {position:absolute;top:-9999px;left:-9999px;}
.pageContent .responTable table tr,#tableScroll table tr { clear:both; width:100%; float:left;}
.pageContent .responTable table tr:nth-of-type(even),#tableScroll table tr:nth-of-type(even) {background:#f9f9f9;}
.pageContent .responTable table td,#tableScroll table td {position:relative;padding-left:45%;border-right:none!important;min-height:40px;}
.pageContent .responTable table td:before,#tableScroll table td:before {position:absolute;top:0;left:0;width:43%;padding:12px 5px 2% 5px;border-right:1px solid #ddd; color: #999;}
.pageContent .responTable table td:last-of-type{float:left;width:100%;}
.pageContent .responTable table td:last-of-type > div{text-align:left!important;}
.pageContent .responTable table td.txtRight{ text-align:left!important;}

.pageContent.supplierproduct .responTable table td:nth-of-type(1):before {content:"<%= translation.SUPPLIER %>";}
.pageContent.supplierproduct .responTable table td:nth-of-type(2):before {content:"<%= translation.PRODUCT %>";}
.pageContent.supplierproduct .responTable table td:nth-of-type(3):before {content:"<%= translation.SUPPLIERPRODCODE %>";}
.pageContent.supplierproduct .responTable table td:nth-of-type(3):before {content:"<%= translation.SUPPLIERPRICE %>";}
.pageContent.supplierproduct .responTable table td:nth-of-type(8):before {content:"<%= translation.QUANTITY %>";}
.pageContent.supplierproduct .responTable table td:nth-of-type(9):before {content:"<%= translation.ISACTIVE %>";}
.pageContent.supplierproduct .responTable table td:nth-of-type(12):before {content:"<%= translation.ACTION %>";}

}

</style>

</head>
<body >
<div class="container-fluid">

  <div class="container breadCrumb ">
    <ul>
      <li><a href="#">My Account</a></li>
      <li>Settings (Options)</li>
    </ul>
    <div id="pageTitle" class="cellTable">
      <div class="glyphicon glyphicon-play fl redTxt cellTableCell"></div>
      <div class="cellTableCell redTxt">
        <h1>Settings (options)</h1>
      </div>
      <div class="cellTableCell lightText"><span>|</span></div>
      <div class="cellTableCell lightText">
        <h5>Change password and current session information</h5>
      </div>
    </div>
    <div class="space0 clearfix btmBorder"></div>
  </div>
  <div class="container pageContent settings">
   
    <div class="col-sm-12 noPadLR">
      <ul id="myTab" class="nav nav-tabs">
        <li><a href="#display" data-toggle="tab"><%= translation.DISPLAYCATEGOYIES %></a></li>
        <li><a href="#add" data-toggle="tab"><%= translation.ADD %></a></li>
        <li><a href="#edit" data-toggle="tab"><%= translation.EDIT %></a></li>
      </ul>
      <div id="myTabContent" class="tab-content allBorder padAll col-sm-12" >
        <div class="tab-pane fade in active  padAll col-sm-12" id="display">
		<a  href="#add"  data-toggle="tab" onclick="ShowOnlyAdd()"><input class="simpleBtn" type="submit" name="" value="<%= translation.ADD %>"></a>
  <div class="pageContent supplierproduct">
       <div class="col-xs-12 noPadLR responTable">
  		<div class="col-xs-12 noPadLR">
  			<table>
  			<thead>
  				<tr>
  					<th><%= translation.SUPPLIER %></th>
  					<th><%= translation.PRODUCT %></th>
                    <th><%= translation.COMMENT %></th>
  					<th><%= translation.SUPPLIERPRODCODE %></th>
  					<th><%= translation.SUPPLIERPRICE %></th>
                    <th><%= translation.QUANTITY %></th>
                    <th><%= translation.ISACTIVE %></th>
                    <th><%= translation.ACTION %></th>
				</tr>
				</thead>
				<tbody>
        <% supplierproducts.forEach(function(supplierproduct) { %>
					<tr>
                        <td ><%= supplierproduct.suppliername %></td>
                        <td ><%= supplierproduct.productname %></td>
                        <td ><%= supplierproduct.comment %></td>
                        <td ><%= supplierproduct.productsuppliercode %></td>
                        <td ><%= supplierproduct.supplierprice %></td>
                        <td ><%= supplierproduct.quantity %></td>
                        <td ><%= supplierproduct.isactive %></td>
                        <td>
                        <div class="col-xs-3 col-md-6 noPadLR "><a href="#edit" data-toggle="tab" 
                                onclick="fillEdit('<%= supplierproduct.id %>','<%= supplierproduct.supplier_id %>','<%= supplierproduct.product_id %>','<%= supplierproduct.comment %>','<%= supplierproduct.productsuppliercode %>','<%= supplierproduct.supplierprice %>',
                                '<%= supplierproduct.quantity %>','<%= supplierproduct.tps %>','<%= supplierproduct.tvq %>','<%= supplierproduct.taxany %>','<%= supplierproduct.ecofee %>','<%= supplierproduct.isactive %>') , ShowOnlyEdit() " ><i class="fa fa-edit"></i></a></div>

                                    <div class="col-xs-3 col-md-6 noPadLR "><a href="/deleteproduct/<%= supplierproduct.id %>"><i class="fa fa-trash-o"></i></a></div>
						</td>
					</tr>
          <% }) %>
				</tbody>	
			</table>
		</div>
	</div>
  </div>
    </div>
  <div class="tab-pane fade in padAll  col-sm-12" id="add">
         <div class="container">
             <div class="contentBox col-xs-12 col-sm-8 col-sm-push-2">
                <div class="form-group col-sm-12">
                    <p>(*) <%= translation.FIELDSMANDATORY %></p>
                    </div>
                    <form action="/createproduct" method="post">
            
                       <div class="form-group col-md-6">
                            <% if (suppliers) { %>
                                <span class="select">
                                        <label class="arrow glyphicon glyphicon-menu-down"></label>
                                    <select id="supplieradd" name="supplieradd" required>
                                        <optgroup label="Select supplier header">
                                            <% suppliers.forEach(function(supplier) { %>
                                                <option name="<%= supplier.name %>" value="<%= supplier.id %>"><%= supplier.name %></option>
                                            <% }) %>
                                      </optgroup>
                                  </select>
                                  </span>    
                            <% } %>
                        </div>   
                       
                        <div class="form-group col-md-6">
                            <% if (products) { %>
                                <span class="select">
                                        <label class="arrow glyphicon glyphicon-menu-down"></label>
                                    <select id="productadd" name="productadd" required>
                                        <optgroup label="Select product header">
                                            <% products.forEach(function(product) { %>
                                                <option name="<%= product.name %>" value="<%= product.id %>"><%= product.name %></option>
                                            <% }) %>
                                      </optgroup>
                                  </select>
                                  </span>    
                            <% } %>
                        </div>   
                      
                        <div  class="form-group col-md-6">
                          
                        <input  type="text" id="productsuppliercodeadd" name="productsuppliercodeadd" placeholder="<%= translation.CODE %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_TEXT %>')"
                                    oninput="setCustomValidity('')"   >
                        </div>

                        <div  class="form-group col-md-6">
                       <input  type="text" id="commentadd" name="commentadd" placeholder="<%= translation.COMMENT %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_TEXT %>')"
                                    oninput="setCustomValidity('')"  >
                        </div>

                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="quantityadd" name="quantityadd" placeholder="<%= translation.QUANTITY %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>

                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="tpsadd" name="tpsadd" placeholder="<%= translation.TPS %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
                       <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="tvqadd" name="tvqadd" placeholder="<%= translation.QSt %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="taxanyadd" name="taxanyadd" placeholder="<%= translation.TAX %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="ecofeeadd" name="ecofeeadd" placeholder="<%= translation.ECOFEE %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
 
                         <br > <br >

                         <div  class="form-group col-md-6">
                          <input id="isactiveadd" name="isactiveadd"  class="customCheckBox"  type="checkbox">
                          <label for="isactiveadd" class="customCheckBox-label"><%= translation.ISACTIVE %></label>
                         </div>
                        <div class="clearfix space0"></div>
                        <div class="form-group col-md-3 col-xs-6 noMarB">
                        <input class="submitBtn redBtn center" name="" value="<%= translation.SAVE %>" type="submit">
                        </div>

                        </div>
                    </form>
                </div>
  	<div class="col-sm-6 noPadLR">
		<a  href="#display"  data-toggle="tab" ><input class="simpleBtn" type="submit" name="" value="<%= translation.PREVIOUS %>" onclick="ShowOnlyDisplay()"></a>
	</div>
        </div>

        <div class="tab-pane fade in padAll col-sm-12" id="edit">
                 <div class="container">

             <div class="contentBox col-xs-12 col-sm-8 col-sm-push-2">
                <div class="form-group col-sm-12">
                    <p>(*) <%= translation.FIELDSMANDATORY %></p>
                    </div>
               <form action="/editsupplierproduct" method="post">
                  
                  <div class="form-group col-md-6">
                            <% if (suppliers) { %>
                                <span class="select">
                                        <label class="arrow glyphicon glyphicon-menu-down"></label>
                                    <select id="supplieredit" name="supplieredit" required>
                                        <optgroup label="Select supplier header">
                                            <% suppliers.forEach(function(supplier) { %>
                                                <option name="<%= supplier.name %>" value="<%= supplier.id %>"><%= supplier.name %></option>
                                            <% }) %>
                                      </optgroup>
                                  </select>
                                  </span>    
                            <% } %>
                        </div>   
                       
                        <div class="form-group col-md-6">
                            <% if (products) { %>
                                <span class="select">
                                        <label class="arrow glyphicon glyphicon-menu-down"></label>
                                    <select id="productedit" name="productedit" required>
                                        <optgroup label="Select product header">
                                            <% products.forEach(function(product) { %>
                                                <option name="<%= product.name %>" value="<%= product.id %>"><%= product.name %></option>
                                            <% }) %>
                                      </optgroup>
                                  </select>
                                  </span>    
                            <% } %>
                        </div>   
                      
                        <div  class="form-group col-md-6">
                          
                        <input  type="text" id="productsuppliercodeedit" name="productsuppliercodeedit" placeholder="<%= translation.CODE %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_TEXT %>')"
                                    oninput="setCustomValidity('')"   >
                        </div>

                        <div  class="form-group col-md-6">
                       <input  type="text" id="commentedit" name="commentedit" placeholder="<%= translation.COMMENT %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_TEXT %>')"
                                    oninput="setCustomValidity('')"  >
                        </div>

                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="quantityedit" name="quantityedit" placeholder="<%= translation.QUANTITY %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>

                       <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="supplierpriceedit" name="supplierpriceedit" placeholder="<%= translation.PRICE %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>

                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="tpsedit" name="tpsedit" placeholder="<%= translation.TPS %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
                       <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="tvqedit" name="tvqedit" placeholder="<%= translation.QSt %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="taxanyedit" name="taxanyedit" placeholder="<%= translation.TAX %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
                        <div  class="form-group col-md-6">
                       <input  type="number" step="any" id="ecofeeedit" name="ecofeeedit" placeholder="<%= translation.ECOFEE %>" value="" tabindex="1"   required  oninvalid="this.setCustomValidity('<%= translation.ERRORInvalide_NUMBER %>')"
                                    oninput="setCustomValidity('')"  >  
                        </div>
 
                         <br > <br >

                         <div  class="form-group col-md-6">
                          <input id="isactiveedit" name="isactiveedit"  class="customCheckBox"  type="checkbox">
                          <label for="isactiveedit" class="customCheckBox-label"><%= translation.ISACTIVE %></label>
                         </div>
                        <div class="clearfix space0"></div>
                        <div class="form-group col-md-3 col-xs-6 noMarB">
                        <input class="submitBtn redBtn center" name="" value="<%= translation.SAVE %>" type="submit">
                        </div>

                        </div>
               </form>

      </div>

  <div class="col-sm-6 noPadLR">
		<a  href="#display"  data-toggle="tab" ><input class="simpleBtn" type="submit" name="" value="<%= translation.PREVIOUS %>" onclick="ShowOnlyDisplay()"></a>
	</div>             
        </div>
		</div>
      </div>
      <script type="text/javascript">
        $('#myTab').tabCollapse();
     </script> 
  </div>
  <div class="clearfix space0"></div>
  </div>
</div>
<script>
function fillEdit(id,supplierid,productid,comment,productsuppliercode,supplierprice,quantity,tps ,tvq ,taxany,ecofee,isactive) {

     document.getElementById('productedit').selectedIndex = supplierid;

    var ddl = document.getElementById('productedit');
    var opts = ddl.options.length;
    for (var i=0; i<opts; i++){
        if (ddl.options[i].value == supplierid){
            ddl.options[i].selected = true;
            break;
        }
    }        

    document.getElementById('supplieredit').selectedIndex = productid;

    var ddl = document.getElementById('supplieredit');
    var opts = ddl.options.length;
    for (var i=0; i<opts; i++){
        if (ddl.options[i].value == productid){
            ddl.options[i].selected = true;
            break;
        }
    } 


    document.getElementById("idedit").value = id
    document.getElementById("productsuppliercodeedit").value = productsuppliercode
    document.getElementById("commentedit").value = comment
    document.getElementById("supplierpriceedit").value = supplierprice
    document.getElementById("quantityedit").value = quantity
    document.getElementById("isactiveedit").checked = ((isactive == 1) ? true : false)

    document.getElementById("tpsedit").value = tps
    document.getElementById("tvqedit").value = tvq
    document.getElementById("taxanyedit").value = taxany
    document.getElementById("ecofeeedit").value = ecofee
}


function ShowOnlyEdit() {
    $('#myTab a[href="#edit"]').tab('show');
    $('#display-collapse').collapse('hide');
    $('#add-collapse').collapse('hide');
    $('#edit-collapse').collapse('show');
}
function ShowOnlyDisplay() {
    $('#myTab a[href="#display"]').tab('show');
    $('#add-collapse').collapse('hide');
    $('#edit-collapse').collapse('hide');
    $('#display-collapse').collapse('show');
}
function ShowOnlyAdd() {
    $('#myTab a[href="#add"]').tab('show');
    $('#display-collapse').collapse('hide');
    $('#edit-collapse').collapse('hide');
    $('#add-collapse').collapse('show');
}
</script>
</body>
</html>